<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_default_view"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:orientation="vertical">

        <com.yehui.utils.view.CircularImageView
            android:id="@+id/friend_icon_img"
            android:layout_width="@dimen/default_icon"
            android:layout_height="@dimen/default_icon"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_padding_and_margin"
            android:src="@drawable/ic_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friend_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_padding_and_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="好友名称"
            android:textColor="@color/black"
            android:textSize="@dimen/default_x_text_size" />

        <TextView
            android:id="@+id/friend_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_padding_and_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="说说"
            android:textColor="@color/gray"
            android:textSize="@dimen/default_text_size"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.17"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friend_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/small_padding_and_margin"
            android:maxLines="1"
            android:text="4G/wifi" />

        <TextView
            android:id="@+id/message_number_text"
            style="@style/text_count_tow"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/small_padding_and_margin"
            android:text="0"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>