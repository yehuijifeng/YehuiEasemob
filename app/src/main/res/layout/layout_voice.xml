<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_voice"
    android:padding="@dimen/default_x_padding_and_margin">

    <ImageView
        android:id="@+id/voice_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ease_record_animate_01" />

    <TextView
        android:id="@+id/voice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_padding_and_margin"
        android:text="@string/voice_tishi" />
</RelativeLayout>