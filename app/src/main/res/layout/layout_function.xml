<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/function_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/function_image_img"
            android:layout_width="@dimen/default_msg_height_and_width"
            android:layout_height="@dimen/default_msg_height_and_width"
            android:layout_margin="@dimen/default_padding_and_margin"
            android:src="@drawable/bg_image_function" />

        <ImageView
            android:id="@+id/function_camera_img"
            android:layout_width="@dimen/default_msg_height_and_width"
            android:layout_height="@dimen/default_msg_height_and_width"
            android:layout_margin="@dimen/default_padding_and_margin"
            android:src="@drawable/bg_camera_function" />

        <ImageView
            android:id="@+id/function_laction_img"
            android:layout_width="@dimen/default_msg_height_and_width"
            android:layout_height="@dimen/default_msg_height_and_width"
            android:layout_margin="@dimen/default_padding_and_margin"
            android:src="@drawable/bg_laction_function" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>